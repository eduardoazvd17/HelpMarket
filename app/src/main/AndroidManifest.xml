<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.net.helpmarket">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.CAMERA"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:screenOrientation="sensorPortrait">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".CadastroActivity"></activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".ListaComprasActivity"></activity>
        <activity android:name=".GruposActivity"></activity>
        <activity android:name=".InformacoesActivity"></activity>
        <activity android:name=".ConfiguracoesActivity"></activity>
        <activity android:name=".NovaListaActivity"></activity>
        <activity android:name=".ListaProdutosActivity"></activity>
        <activity android:name=".AdicionarProdutoActivity"></activity>
        <activity android:name=".EditarProdutoActivity"></activity>
        <activity android:name=".EditarListaActivity"></activity>

    </application>

</manifest>